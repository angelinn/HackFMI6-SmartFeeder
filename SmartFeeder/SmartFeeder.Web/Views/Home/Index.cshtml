@using SmartFeeder.Core.ViewModels
@model FeedingViewModel

<div class="jumbotron">
    <h1>Smart Feeder</h1>
    <p class="lead">Just a click away!</p>
    <p><a href="~/api/feeder/feed" class="btn btn-primary btn-lg">Feed! >></a></p>

    <hr />

    <h2>Set timer:</h2>
    <form action="/api/feeder/settimer" method="post">
        <div class="form-group">
            <div class="control-label">
                @Html.LabelFor((m) => m.TimeAmount) 
            </div>
            @Html.EditorFor((m) => m.TimeAmount, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="control-label">
                @Html.LabelFor((m) => m.TimeType)
            </div>  
            @Html.EditorFor((m) => m.TimeType, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Go!</button>
    </form>
</div>
